<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/series_image_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera" android:layout_marginEnd="16dp"
            android:contentDescription="Miniatura da SÃ©rie" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/series_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_of_thrones"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/series_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fantasia"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/series_seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/seasons_7"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700" />

    </LinearLayout>

</androidx.cardview.widget.CardView>